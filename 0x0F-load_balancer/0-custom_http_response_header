#!/usr/bin/env bash
# Script to configure web-02 to be identical to web-01
# and adds custom Nginx response header
#shellcheck disable=SC2154

sudo apt-get update
sudo apt-get install -y nginx
sudo ufw allow 'Nginx HTTP'

echo "Hello World!" | sudo tee /var/www/html/index.html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

#str_add="http {\n\tadd_header X-Served-By \"$HOSTNAME\";"
#sudo sed -i "s/http {/$str_addg/" /etc/nginx/nginx.conf

sudo sed -i "/listen 80 default_server/i add_header X-Served_By $HOSTNAME;" /etc/nginx/sites-available/default

sudo service nginx start
